<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="awsCredentials"
        class="org.cyclospgroup.kaufman.aws.EnvironmentalAWSCredentials" />
    <bean id="doormanBetaProperties"
        class="org.cyclopsgroup.kaufman.aws.dycfg.DynamoDBPropertiesFactoryBean">
        <constructor-arg>
            <bean
                class="amazon.amazonaws.services.dynamodb.AmazonDynamoDBClient">
                <constructor-arg ref="awsCredentials" />
            </bean>
        </constructor-arg>
        <constructor-arg value="kaufman-app-properties-beta" />
        <constructor-arg value="com.cyclopsgroup.doorman.service/beta" />
    </bean>
    <bean
        class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="properties" ref="doormanBetaProperties" />
    </bean>
    <import resource="classpath:org/cyclopsgroup/doorman/core-service.xml" />
</beans>